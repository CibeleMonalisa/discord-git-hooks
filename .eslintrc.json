{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "lines-between-class-members" : ["error", "always"],
    "no-return-await": "error",
    "require-await": "error",
    "no-shadow": "off"
  }
}